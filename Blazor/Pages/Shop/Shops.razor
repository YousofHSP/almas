@page "/Shops"
@inherits ShopsBase
@layout AdminLayout
<section class="px-10 pt-20">
    @if (Shops is null)
    {
        <DisplaySpinner/>
    }
    else
    {
        <div class="text-center py-20 ">
            <h2 class="text-2xl font-bold">فروشگاه ها</h2>
        </div>
        <div class="m-auto grid grid-cols-3 gap-3">
            @foreach (var shop in Shops)
            {
                <ShopItem Shop="shop"/>
            }
        </div>
    }
</section>
